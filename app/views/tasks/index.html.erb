<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Urgency</th>
      <th>Duration minutes</th>
      <th>Attention date</th>
      <th>Deadline</th>
      <th>Planned date</th>
      <th>Planned starting time</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.urgency %></td>
        <td><%= task.duration_minutes %></td>
        <td><%= task.attention_date %></td>
        <td><%= task.deadline %></td>
        <td><%= task.planned_date %></td>
        <td><%= task.planned_starting_time %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

